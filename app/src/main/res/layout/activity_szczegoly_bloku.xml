<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"



    android:background="@drawable/hlg_bg"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:weightSum="1"
        android:orientation="vertical"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="30dp"
            app:srcCompat="@drawable/logohlg_red"
            />

        <TextView
            android:id="@+id/nazwaBloku"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nazwa bloku"
            android:background="@layout/border_edit_text"
            android:textAlignment="center"
            android:padding="5dp"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>





        <TextView
        android:id="@+id/vlanLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="VLAN: "
        android:textAlignment="textStart"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        />
        <TextView
            android:id="@+id/vlanContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0000"
            android:textAlignment="textStart"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="normal"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/vlanStatusLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="VLAN STATUS: "
            android:textAlignment="textStart"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/vlanStatusContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="AKTYWNY"
            android:textAlignment="textStart"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="normal"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/DosylLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="DOSYŁ NA BLOK:"
            android:textAlignment="textStart"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/DosylContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="00000000/ABC/BA"
            android:textAlignment="textStart"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="normal"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/BezpiecznikiLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="BEZPIECZNIKI:"
            android:textAlignment="textStart"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/BezpiecznikiContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Piwnica klatka 1"
            android:textAlignment="textStart"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="normal"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/UwagiLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Uwagi:"
            android:textAlignment="textStart"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/UwagiContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bardzo,bardzo, bardzo bardzo bardzo bardzo bardzo bardzo bardzo bardzo bardzo bardzi dlugi tekst"
            android:textAlignment="textStart"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="normal"
            android:layout_marginBottom="10dp"/>






        <Button
            android:id="@+id/bKlatki"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@layout/border_edit_text"

            android:text="LISTA KLATEK"
            android:layout_marginBottom="5dp"/>
                

        <Button
            android:id="@+id/bPowrot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@layout/border_edit_text"
            android:text="POWRÓT"
            android:layout_marginBottom="5dp"/>


            </LinearLayout>
        </ScrollView>


    </LinearLayout>



</RelativeLayout>